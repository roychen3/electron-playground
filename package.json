{
  "name": "electron-playground",
  "version": "1.0.0",
  "main": "./dist/main/main.js",
  "workspaces": [
    "pkg/desktop",
    "pkg/desktop/src/ui/electron-use-web-ui",
    "pkg/desktop/src/ui/electron-ui",
    "pkg/web"
  ],
  "scripts": {
    "watch:desktop": "npm run watch --workspace=@mono/desktop",
    "build:desktop": "npm run build --workspace=@mono/desktop",
    "start:desktop": "npm run start --workspace=@mono/desktop",
    "dev:electron-ui": "npm run dev --workspace=@mono/electron-ui",
    "build:electron-ui": "npm run build --workspace=@mono/electron-ui",
    "dev:web": "npm run dev --workspace=@mono/web",
    "build:web": "npm run build --workspace=@mono/web",
    "build:lib:web": "npm run build:lib --workspace=@mono/web",
    "dev:electron-use-web-ui": "npm run dev --workspace=@mono/electron-use-web-ui",
    "build:electron-use-web-ui": "npm run build --workspace=@mono/electron-use-web-ui",
    "build": "npm-run-all --parallel build:desktop build:electron-ui build:web build:lib:web --sequential build:electron-use-web-ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
